<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CRUD.CRUDMenuUsersController">
   <left>
      <Pane prefHeight="900.0" prefWidth="370.0" style="-fx-background-color: lightblue;" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="402.0" fitWidth="350.0" layoutX="10.0" layoutY="-67.0">
               <image>
                  <Image url="@../Logo-removebg-preview.png" />
               </image>
            </ImageView>
            <Button layoutX="10.0" layoutY="350.0" mnemonicParsing="false" prefHeight="60.0" prefWidth="350.0" text="Users">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <font>
                  <Font name="HP Simplified" size="30.0" />
               </font>
            </Button>
            <Button layoutX="10.0" layoutY="420.0" mnemonicParsing="false" onAction="#navigateToServers" prefHeight="60.0" prefWidth="350.0" text="Servers">
               <font>
                  <Font name="HP Simplified" size="30.0" />
               </font>
            </Button>
            <Button layoutX="10.0" layoutY="560.0" mnemonicParsing="false" onAction="#navigateToAuditLogs" prefHeight="60.0" prefWidth="350.0" text="Audit Logs">
               <font>
                  <Font name="HP Simplified" size="30.0" />
               </font>
            </Button>
            <Button layoutX="10.0" layoutY="490.0" mnemonicParsing="false" onAction="#navigateToOrders" prefHeight="60.0" prefWidth="350.0" text="Orders">
               <font>
                  <Font name="HP Simplified" size="30.0" />
               </font>
            </Button>
            <Label layoutX="144.0" layoutY="292.0" text="CRUD">
               <font>
                  <Font name="HP Simplified Bold" size="36.0" />
               </font>
            </Label>
         </children>
      </Pane>
   </left>
   <center>
      <VBox prefHeight="200.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Pane layoutX="176.0" layoutY="30.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="75.0" prefWidth="50.0" />
                  <Label prefHeight="56.0" prefWidth="122.0" text="Users">
                     <font>
                        <Font name="HP Simplified Bold" size="48.0" />
                     </font>
                  </Label>
                  <Pane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="75.0" prefWidth="50.0" HBox.hgrow="SOMETIMES" />
                  <Button mnemonicParsing="false" onAction="#createUser" prefHeight="60.0" prefWidth="180.0" text="Create">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <font>
                        <Font name="HP Simplified" size="30.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#updateUser" prefHeight="60.0" prefWidth="180.0" text="Update">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <font>
                        <Font name="HP Simplified" size="30.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#deleteUser" prefHeight="60.0" prefWidth="180.0" text="Delete">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <font>
                        <Font name="HP Simplified" size="30.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="20.0" right="20.0" top="20.0" />
               </padding>
            </HBox>
            <TableView fx:id="usersTableView" editable="true" fixedCellSize="20.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="user_id" minWidth="80.0" resizable="false" text="user_id" />
                <TableColumn fx:id="username" minWidth="100.0" prefWidth="100.0" text="username" />
                  <TableColumn fx:id="email" minWidth="120.0" prefWidth="120.0" text="email" />
                  <TableColumn fx:id="full_name" minWidth="170.0" prefWidth="170.0" text="full_name" />
                  <TableColumn fx:id="contact_number" minWidth="120.0" prefWidth="120.0" text="contact_number" />
                  <TableColumn fx:id="status" minWidth="60.0" prefWidth="60.0" text="status" />
                  <TableColumn fx:id="created_at" minWidth="75.0" prefWidth="75.0" text="created_at" />
                  <TableColumn fx:id="last_login" minWidth="75.0" prefWidth="75.0" text="last_login" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </center>
</BorderPane>
